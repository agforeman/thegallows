<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csci3320.thegallows">


    <application
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">

        <activity android:name="csci3320.thegallows.Gameplay"/>

        <activity android:name="csci3320.thegallows.StartScreen"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="csci3320.thegallows.Endgame"
            android:configChanges="orientation|screenSize"/>

        <activity android:name="csci3320.thegallows.Settings"/>
    </application>

</manifest>
