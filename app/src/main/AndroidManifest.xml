<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csci3320.thegallows">

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Black.NoTitleBar">

        <activity android:name="csci3320.thegallows.Gameplay"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>

        <activity android:name="csci3320.thegallows.StartScreen"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="csci3320.thegallows.Endgame"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>

        <activity android:name="csci3320.thegallows.Settings"/>
    </application>

</manifest>
