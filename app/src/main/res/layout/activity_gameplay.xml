<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:gravity="fill"
    android:background="@drawable/defaultboard"
    android:id="@+id/MainLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarContainer" >

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:id="@+id/progressBar"
            android:progress="0"
            android:max="102"
            android:background="#000000" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LevelBar"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/BarComponents"
            android:weightSum="2"
            android:background="@android:color/transparent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:id="@+id/LevelAndCategory"
                android:layout_weight=".5"
                android:background="@android:color/transparent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/LevelText"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/CategoryText"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LifeAndHints"
                android:weightSum="2"
                android:background="@android:color/transparent"
                android:layout_weight="1.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LifesText"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="17sp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/HintsText"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="17sp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HangmanAreaContainer"
        android:layout_weight="3"
        android:background="@android:color/transparent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/hangman_area"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:contentDescription="@string/IV_content_description" />
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wordAreaContainer"
        android:background="@android:color/transparent">

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HintArea"
        android:background="@android:color/transparent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/HintButton"
            android:id="@+id/HintKey"
            android:background="@drawable/button_design"
            android:textColor="#000000"
            android:textSize="15dp" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keyboardAreaContainer"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/keyboardAreaLayout"
            android:weightSum="3"
            android:paddingBottom="2dp"
            android:visibility="visible"
            android:background="@android:color/transparent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row1"
                android:weightSum="10"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:background="@android:color/transparent">

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Q"
                    android:id="@+id/Q"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/W"
                    android:id="@+id/W"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/E"
                    android:id="@+id/E"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/R"
                    android:id="@+id/R"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/T"
                    android:id="@+id/T"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Y"
                    android:id="@+id/Y"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/U"
                    android:id="@+id/U"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/I"
                    android:id="@+id/I"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/O"
                    android:id="@+id/O"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/P"
                    android:id="@+id/P"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row2"
                android:weightSum="10"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:background="@android:color/transparent">

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/space_left1"
                    android:visibility="invisible"
                    android:layout_weight=".5"
                    android:background="@drawable/button_design" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/A"
                    android:id="@+id/A"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/S"
                    android:id="@+id/S"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/D"
                    android:id="@+id/D"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/F"
                    android:id="@+id/F"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/G"
                    android:id="@+id/G"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/H"
                    android:id="@+id/H"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/J"
                    android:id="@+id/J"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/K"
                    android:id="@+id/K"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/L"
                    android:id="@+id/L"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:allowUndo="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/space_right1"
                    android:visibility="invisible"
                    android:layout_weight=".5"
                    android:background="@drawable/button_design" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row3"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:background="@android:color/transparent">

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/space_left2"
                    android:visibility="invisible"
                    android:layout_weight="1.5"
                    android:background="@drawable/button_design" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Z"
                    android:id="@+id/Z"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/X"
                    android:id="@+id/X"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/C"
                    android:id="@+id/C"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/V"
                    android:id="@+id/V"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/B"
                    android:id="@+id/B"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/N"
                    android:id="@+id/N"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/M"
                    android:id="@+id/M"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/space_right2"
                    android:visibility="invisible"
                    android:layout_weight="1.5"
                    android:background="@drawable/button_design" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>